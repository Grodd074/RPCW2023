extends layout

block content
  .w3-card-4
    header.w3-container.w3-purple
      h1 Edit Tarefa

    form.w3-container(method="POST")
        fieldset
            legend Metadata
            label Id
            input.w3-input.w3-round(type="text" name="id" value=t.id readonly)
            label What to Do
            input.w3-input.w3-round(type="text" name="whatToDo" value=t.whatToDo)
            label Who To Do
            input.w3-input.w3-round(type="text" name="whoToDo" value=t.whoToDo)  
            label Deadline
            input.w3-input.w3-round(type="text" name="deadline" value=t.deadline)  

        button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

    footer.w3-container.w3-purple 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]