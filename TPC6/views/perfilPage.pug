extends layout

block content
    .w3-card-4
        .w3-container.w3-blue
            .w3-card.w3-center
                h1 #{p.nome}

    .w3-container
        .w3-card
            h2 Informações pessoais
            h4 Idade: #{p.idade}
            h4 Sexo: #{p.sexo}
            h4 Morada: #{p.morada.cidade} - #{p.morada.distrito}
            h4 Profissão: #{p.profissao}
            h4 BI/CC: #{p.CC ? p.CC : p.BI}

        .w3-card
            h2 Descrição
            h4 #{p.descricao ? p.descricao : "Sem descrição"}

    .w3-container
        .w3-card
            h2 Atributos
            h4 Fumador: #{p.atributos.fumador}
            h4 Gosta Cinema: #{p.atributos.gosta_cinema}
            h4 Gosta Viajar: #{p.atributos.gosta_viajar}
            h4 Acorda cedo: #{p.atributos.acorda_cedo}
            h4 Gosta ler: #{p.atributos.gosta_ler}
            h4 Gosta música: #{p.atributos.gosta_musica}
            h4 Gosta comer: #{p.atributos.gosta_comer}
            h4 Gosta animais estimação: #{p.atributos.gosta_animais_estimacao}
            h4 Gosta dançar: #{p.atributos.gosta_dancar}
            h4 Comida Favorita: #{p.atributos.comida_favorita}

        .w3-card
            h2 Gostos
            h4 Desportos: #{p.desportos}
            h4 Animais: #{p.animais}
            h4 Figuras Públicas: #{p.figura_publica_pt}
            h4 Marca de carro: #{p.marca_carro}
        .w3-card
            h2 Crenças
            h4 Partido político: #{p.partido_politico.party_name}
            h4 Religião #{p.religiao ? p.religiao : "Sem religião"}

    footer.w3-container.w3-teal
        h5 Generated by RPCW2023 in #{d}