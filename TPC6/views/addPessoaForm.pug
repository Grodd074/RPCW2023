extends layout 
block content 

    .w3-card-4
        header.w3-container.w3-purple
            h2 Pessoas Form
        form.w3-container(method="POST")
            
            fieldset.w3-half.w3-left
                legend Dados pessoais
                .w3-card
                    .w3-row-padding
                        .w3-half
                            label Nome
                            input.w3-input.w3-round.w3-animate-input(type="text" name="nome" style="width:90%" placeholder="Primeiro Nome")
                        .w3-half
                            label Apelido
                            input.w3-input.w3-round.w3-animate-input(type="text" name="apelido" style="width:90%" placeholder="Último Nome")                        
                    
                    .w3-row-padding
                        .w3-third
                            label Idade
                            input.w3-input.w3-round(type="number" name="idade" min="0" max="120" placeholder="Idade")                                            
                        .w3-third
                            label BI/CC
                            input.w3-input.w3-round(type="text" name="BI" maxLength="12" placeholder="BI/CC")
                        .w3-third
                            label Sexo
                            select.w3-select
                                optgroup
                                    option M
                                    option F
                        
                    .w3-row-padding
                        .w3-half
                            label Cidade
                            input.w3-input.w3-round(type="text" name="cidade" placeholder="Cidade")
                        .w3-half
                            label Distrito
                            input.w3-input.w3-round(type="text" name="distrito" placeholder="Distrito")
            
            fieldset.w3-rest
                legend Preferências
                .w3-card
                    .w3-row               
                        label.w3-left Profissão
                        input.w3-input.w3-round.w3-quarter(type="text" name="profissao")
                        label.w3-left Religião
                        input.w3-input.w3-round.w3-quarter(type="text" name="religiao")                    
                    .w3-row    
                        label.w3-left Figura Pública PT
                        input.w3-input.w3-round.w3-quarter(type="text" name="figura_publica_pt")
                        label.w3-left Marca Carro
                        input.w3-input.w3-round.w3-quarter(type="text" name="marca_carro")
                
            fieldset
                legend TPC
                each i in [1,2,3,4,5,6,7,8]
                    input.w3-check(type="checkbox" name="tpc"+i value="1")
                    label TPC#{i}
                        
                    
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Add
               
        footer.w3-container.w3-purple
            h5 Generated by RPCW2023 in #{d} - [#[a(href="/") Return]]